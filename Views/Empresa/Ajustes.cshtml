@using MiChamba.ViewModel;
@using MiChamba.Models;

@{
    ViewData["Title"] = "Perfil Empresa";
    Layout = "~/Views/Shared/_EmpresaLayout.cshtml";
}

<style>
    .custom-file-input {
        opacity: 0;
        position: absolute;
        z-index: -1;
    }

    .custom-file-label {
        display: inline-block;
        cursor: pointer;
    }


    .btn-secondy {
        background: #acacbe;
        color: black;
        font-weight: bold;
    }
</style>

<div class="bg-dark rounded p-4">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-3">
                <h3 class="text-white mb-3">Mi perfil</h3>
                <div class="d-flex justify-content-center  ">
                    <div class="rounded bg-white w-100">
                        <div class="row p-4 w-100">

                            <div class="col-md-6 rounded shadow">
                                <div class="text-center p-2">
                                    <img src="~/uploads/img/@ViewBag.foto" class="img-fluid rounded" style="max-width:150px;" alt="">
                                    <h5 class="pt-2">Paolo Navarro</h5>
                                </div>
                            </div>

                            <div class="col-md-6 pt-3">
                    
                                <div class="row d-flex mt-2">
                                    <div class="col-md-6">
                                        <a asp-action="ModificacionEmpresa" class="btn btn-primary w-100">Editar empresa</a>
                                    </div>
                                </div>
   

                                
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
