<link rel="stylesheet" href="~/css/empresa.css"/>

<div class="bg-dark p-5 position-absolute w-100 h-100">
    <div class="text-infort">
        <h1 class="text-infort">Información de trabajo</h1>
    </div>
    <div class="bg-light container content-ofert">
        <div class="row">
            <div class="form-group col-sm-12 mb-3">
                <label for="tituloTrabajo" class="form-label">Titulo del trabajo</label>
                <input type="email" class="form-control" id="tituloTrabajo">
            </div>
        </div>


        <form method="post" action="">
            <div class="form-group col-sm-12 mb-3">
                <label for="educacion" class="form-label">Educación</label>
                <input type="text" class="form-control" id="educacion" name="Educacion" required>
            </div>
            <div class="form-group col-sm-12 mb-3">
                <label for="experiencia-educacion" class="form-label">Experiencia:</label>
                <input type="text" class="form-control" id="experiencia-educacion" name="ExperienciaEducacion" required>
            </div>
            <div class="form-group col-sm-12 mb-3">
                <label for="habilidades-educacion" class="form-label">Habilidades:</label>
                <input type="text" class="form-control" id="habilidades-educacion" name="HabilidadesEducacion" required>
            </div>

            <div class="form-group col-sm-12 mb-3">
                <label for="conocimientos" class="form-label">Conocimientos:</label>
                <input type="text" class="form-control" id="conocimientos" name="Conocimientos" required>
            </div>

            <div class="button d-grid gap-2 col-2 mx-auto mt-3">
                <button class="btn btn-primary" type="submit">Publicar</button>
            </div>
        </form>
    </div>
</div>
