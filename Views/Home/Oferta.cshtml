@using MiChamba.ViewModel;

@{
    OfertaViewModel oferta = ViewBag.oferta ?? new OfertaViewModel();
    String titulo = oferta.Titulo ?? "Ofertas";

    ViewData["Title"] = "Oferta - " + titulo  ;

    List<OfertaViewModel> ofertasBuscadas = ViewBag.ofertasBuscadas ?? Enumerable.Empty<OfertaViewModel>().ToList();



}

<!-- OFERTAS -->
<main class="bg-dark p-5 position-absolute w-100 h-100">
    <div class="container pt-5">
        <div class="card mt-4">
            <div class="card-body p-3">
                <div class="row p-1">
                    @{ 
                       if (ofertasBuscadas.Count() == 0 )
                        {
                            <ul class="list-unstyled">
                                <li class="h2 fw-bold"> @oferta.Titulo </li>
                                <li class="text-muted"> @oferta.Ciudad  - @oferta.FechaPublicada</li>
                                <li>
                                    <hr />
                                </li>
                                <li style="text-align:justify">
                                    <div class="row">
                                            <div class="col-md-6">
                                                @oferta.Descripcion
                                            </div>
                                            <div class="col-md-6">
                                                <h3>Requerimientos:</h3>
                                                <p>
                                                    <span class="fw-bold">Experiencia:</span>
                                                    @oferta.Requisitos["experiencia"]
                                                </p>
                                                <p>
                                                    <span class="fw-bold">Educación:</span>
                                                    @oferta.Requisitos["educacion"]
                                                </p>
                                                <span class="fw-bold">Habilidades:</span>
                                                <ul>
                                                    @foreach (var habilidad in oferta.Requisitos["habilidades"])
                                                    {
                                                        <li>@habilidad</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                </li>
                            </ul>
                        }
                        else
                        {
                            foreach (OfertaViewModel ofertaB in ofertasBuscadas)
                            {

                                <ul class="list-unstyled">
                                    <li class="h2 fw-bold"> @ofertaB.Titulo </li>
                                    <li class="text-muted"> @ofertaB.Ciudad  - @ofertaB.FechaPublicada</li>
                                    <li>
                                        <hr />
                                    </li>
                                    <li style="text-align:justify">
                                        <div class="row">
                                            <div class="col-md-6">
                                                @ofertaB.Descripcion
                                            </div>
                                            <div class="col-md-6">
                                                <h3>Requerimientos:</h3>
                                                <p>
                                                    <span class="fw-bold">Experiencia:</span>
                                                    @ofertaB.Requisitos["experiencia"]
                                                </p>
                                                <p>
                                                    <span class="fw-bold">Educación:</span>
                                                    @ofertaB.Requisitos["educacion"]
                                                </p>
                                                <span class="fw-bold">Habilidades:</span>
                                                <ul>
                                                    @foreach (var habilidad in ofertaB.Requisitos["habilidades"])
                                                    {
                                                        <li>@habilidad</li>
                                                    }
                                                </ul>
                                            </div>
                                        </div>
                                    </li>
                                </ul>
                            }
                        }
                    }
                </div>
            </div>
            <div class="card-footer text-end">
                <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Regresar</a>
            </div>
        </div>
    </div>
</main>