@using MiChamba.ViewModel;

@{
    OfertaViewModel oferta = ViewBag.oferta;
    ViewData["Title"] = "Oferta - " +  oferta.Titulo;
}


<!-- OFERTAS -->
<main class="bg-dark p-5 position-absolute w-100 h-100">
    <div class="container pt-5">
        <div class="card mt-4">
            <div class="card-body p-3">
                <div class="row p-1">
                    <ul class="list-unstyled">
                        <li class="h2 fw-bold"> @oferta.Titulo </li>
                        <li class="text-muted"> @oferta.Ciudad  - @oferta.FechaPublicada</li>
                        <li>
                            <hr />
                        </li>
                        <li style="text-align:justify">
                            @oferta.Descripcion
                        </li>
                    </ul>
                </div>
            </div>
            <div class="card-footer text-end">
                <a class="btn btn-dark" asp-controller="Home" asp-action="Index">Regresar</a>
            </div>
        </div>
    </div>
</main>