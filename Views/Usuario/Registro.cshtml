@using MiChamba.Models
@model MiChamba.Models.Usuario

@{
    ViewData["Title"] = "Registrarse";
}
<!-- Inicio Registro -->

<div class="bg-dark p-4 w-100 h-100 position-absolute bg-white" id="login-container">
    <div class="container w-75 d-flex justify-content-center align-items-center">
        <form asp-controller="Usuario" asp-action="Registro" enctype="multipart/form-data" method="post" id="registro-form" class="login-form w-75">
            <h2>Registro</h2>
            <hr />
            <div class="row">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombres -->
                <div class="col-md-6 mt-md-2">
                    <label for="nombres" asp-for="Nombre">Nombres: </label>
                    <input type="text" asp-for="Nombre" class="form-control" name="Nombre" id="nombres" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Apellidos -->
                <div class="col-md-6 mt-md-2">
                    <label for="apellidos" asp-for="Apellido">Apellidos: </label>
                    <input type="text" asp-for="Apellido" class="form-control" name="Apellido" id="apellidos" />
                    <span asp-validation-for="Apellido" class="text-danger"></span>
                </div>

                <!-- Pais -->
                <div class="col-md-6">
                    <fieldset class="mt-md-2">
                        <label for="pais">Pais: </label>
                        <select id="pais" name="Pais" class="form-control">
                        </select>
                    </fieldset>
                </div>

                <!-- Departamento -->
                <div class="col-md-6">
                    <fieldset class="mt-md-2">
                        <label for="departamento">Departamento: </label>
                        <select id="departamento" name="Estado" class="form-control">
                            <option>Selecciona un departamento...</option>
                        </select>
                    </fieldset>
                </div>

                <!-- Correo -->
                <div class="col-md-6">
                    <fieldset class="mt-md-2">
                        <label for="email" asp-for="Email">Correo: </label>
                        <input type="email" class="form-control" asp-for="Email" name="Email" id="email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </fieldset>
                </div>

                <!-- Password -->
                <div class="col-md-6">
                    <fieldset class="mt-md-2">
                        <label for="password" asp-for="Password">Password: </label>
                        <input type="password" asp-for="Password" class="form-control" name="Password" id="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </fieldset>
                </div>

                <!-- Telefono -->
                <div class="col-md-6">
                    <fieldset class="mt-md-2">
                        <label for="telefono" asp-for="Telefono">Telefono: </label>
                        <input type="text" asp-for="Telefono" class="form-control" name="Telefono" id="telefono" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </fieldset>
                </div>

                <!-- Foto de perfil -->
                <div class="col-md-6">
                    <fieldset class="mt-md-2">
                        <label for="foto_perfil">Foto: </label>
                        <input type="file" class="form-control" name="ImagenFile" id="foto_perfil" />
                    </fieldset>
                </div>

                <!-- Btn Registro -->
                <div class="col-md-6 offset-md-6 mt-2">
                    <fieldset class="mt-md-2">
                        <input type="submit" class="btn btn-login text-white w-100" name="Registrar" value="Registrarse" />
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/Ajax.js"></script>
    <script src="~/js/Registro.js"></script>
}