@using MiChamba.ViewModel;
@using MiChamba.Models;

@{
    ViewData["Title"] = "Perfil Profesional";
}

<div class="bg-dark p-4 mt-5" id="perfil-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3 class="text-white mx-5 px-5">Mi perfil profecional</h3>
                <div class="d-flex justify-content-center ">
                    <div id="content-height">
                        <div class="row d-flex p-4  justify-content-center mx-3 mt-2">

                            <div class="col-lg-4 col-md-4 col-sm-4 border border-dark rounded-4" id="imagePerfil">
                                <div class="text-center p-2">
                                    <img src="~/img/imageperfil.png" class="imgperfil" alt="">
                                    <h5 class="pt-2">Paolo Navarro</h5>
                                </div>
                            </div>

                            <div class="col pt-3">
                                <div class="row d-flex">
                                    <div class="col-6">
                                        <p class="text-end">Editar cuenta</p>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-primary form-control" id="btnform">Editar</button>
                                    </div>
                                </div>
                                <div class="row d-flex mt-2">
                                    <div class="col-6">
                                        <p class="text-end">Subir CV</p>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-primary form-control" id="btnform">Editar</button>
                                    </div>
                                </div>
                                <div class="row d-flex mt-2">
                                    <div class="col-6">
                                        <p class="text-end">Eliminar cuenta</p>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-primary form-control" id="btnform">Editar</button>
                                    </div>
                                </div>
                                <div class="row d-flex mt-2">
                                    <div class="col-6">
                                        <p class="text-end">Agregar Preferencias</p>
                                    </div>
                                    <div class="col-6">
                                        <button class="btn btn-primary form-control" id="btnform">Editar</button>
                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="col-lg-12 row d-flex">
                            <h3 class="mx-4 mb-4">Estadisticas</h3>
                            <div class="col-lg-6 col-md-6 col-sm-6 text-center">
                                <h5>Visualizacion del perfil</h5>
                                <img src="~/img/eye.svg" alt="" id=imgEstadistica>
                                <h4>4</h4>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 text-center">
                                <h5>Mensajes recibidos</h5>
                                <img src="~/img/chat-left-dots.svg" id=imgEstadistica class="mt-1" alt="">
                                <h4>4</h4>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
