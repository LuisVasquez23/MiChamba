@using MiChamba.ViewModel;
@using MiChamba.Models;


@{
    ViewData["Title"] = "Perfil Profesional";
    Layout = "~/Views/Shared/_UsuarioLayout.cshtml";
}

<div class="bg-dark rounded p-4" >
    <div class="container">
        <div class="row">
            <div class="col-lg-12 p-3">
                <h3 class="text-white mb-3">Mi perfil</h3>
                <div class="d-flex justify-content-center  ">
                    <div class="rounded bg-white w-100">
                        <div class="row p-4 w-100">

                            <div class="col-md-6 rounded shadow" >
                                <div class="text-center p-2">
                                    <img src="~/uploads/img/@ViewBag.foto" class="img-fluid rounded" alt="">
                                    <h5 class="pt-2">Paolo Navarro</h5>
                                </div>
                            </div>

                            <div class="col-6 pt-3">
                                <div class="row d-flex">
                                    <div class="col-6">
                                        <button class="btn btn-primary w-100" >Cambiar contraseña</button>
                                    </div>
                                </div>
                                <div class="row d-flex mt-2">
                                    <div class="col-6">
                                        <a asp-action="ModificacionPerfil" class="btn btn-primary w-100" >Editar perfil</a>
                                    </div>
                                </div>

                                <div class="row d-flex mt-2">
                                    <div class="col-6">
                                        <form asp-controller="Usuario" asp-action="AgregarCurriculum" enctype="multipart/form-data" method="post">
                                            <div class="form-group">
                                                <label for="curriculumFile">Currículum: </label>
                                                <input type="file" class="form-control" name="curri" id="curri" accept=".pdf" />
                                            </div>
                                            <fieldset class="mt-md-2">
                                                <input type="submit" class="btn btn-login text-white w-100" name="SubirCurrículum" value="Subir Currículum" />
                                            </fieldset>
                                        </form>
                                    </div>
                                </div>



                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>
